// Place your settings in this file to overwrite the default settings
{
  "workbench.colorCustomizations": {
    "statusBar.background": "#3a3a3a",
    "panel.background": "#1f1f1f",
    "sideBar.background": "#1f1f1f",

    "titleBar.activeBackground": "#2d2d2d",
    "titleBar.activeForeground": "#2d2d2d",
    "titleBar.inactiveBackground": "#2d2d2d",
    "titleBar.inactiveForeground": "#9d9d9d"
  },
  "window.zoomLevel": 0,
  "editor.fontSize": 13,
  "editor.lineHeight": 20,
  "editor.fontFamily": "'SourceCodePro-Regular'",
  // "editor.fontSize": 14,
  // "editor.lineHeight": 22,
  // "editor.fontFamily": "'SourceCodePro-Light'",
  "editor.fontWeight": "normal",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.trimAutoWhitespace": true,
  "editor.scrollBeyondLastLine": true,
  "editor.minimap.enabled": false,
  // "editor.folding": false,
  "editor.hideCursorInOverviewRuler": true,
  // "editor.lineNumbers": "off",
  // "editor.matchBrackets": false,
  // "editor.occurrencesHighlight": false,
  "editor.overviewRulerBorder": false,
  "editor.renderIndentGuides": false,
  "editor.renderLineHighlight": "none",
  "explorer.openEditors.visible": 0,
  // "workbench.activityBar.visible": false,
  // "workbench.statusBar.visible": false,
  "workbench.iconTheme": "vscode-icons",
  // "workbench.iconTheme": null,
  // "workbench.editor.showIcons": false,
  "workbench.colorTheme": "Base16 Eighties Dark",
  "files.trimTrailingWhitespace": true,
  "extensions.ignoreRecommendations": false,
  "html.format.wrapLineLength": 120,
  "files.associations": {
    "*.vue": "vue"
  },
  "explorer.autoReveal": false,
  "terminal.integrated.fontFamily": "'SourceCodePro-Regular'",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1,
  "explorer.confirmDragAndDrop": false,
  "git.autofetch": true,
  "editor.multiCursorModifier": "alt",
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "stylelint.enable": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "jspm_packages" : true,
    "node_modules" : true,
    "**/node_modules": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "vue",
      "autoFix": true
    }
  ],
  "vetur.validation.script": false,
  "vetur.validation.style": false,
  "vetur.validation.template": false,
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
}

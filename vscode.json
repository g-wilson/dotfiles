// Place your settings in this file to overwrite the default settings
{
  "workbench.colorCustomizations": {
    "statusBar.background": "#090909",
    "statusBar.foreground": "#AFAFAF",
    "activityBar.background": "#1D1D1D",
    "panel.background": "#090909",
    "sideBar.background": "#090909",
    "titleBar.activeBackground": "#1D1D1D",
    "titleBar.activeForeground": "#1D1D1D",
    "titleBar.inactiveBackground": "#1D1D1D",
    "titleBar.inactiveForeground": "#9d9d9d",
    "editor.background": "#212121",
  },
  "editor.fontSize": 14,
  "editor.lineHeight": 20,
  "editor.fontFamily": "'SourceCodePro-Medium'",
  "editor.insertSpaces": false,
  "editor.trimAutoWhitespace": true,
  "editor.scrollBeyondLastLine": true,
  "editor.minimap.enabled": false,
  // "editor.folding": false,
  "editor.hideCursorInOverviewRuler": true,
  // "editor.lineNumbers": "off",
  // "editor.matchBrackets": false,
  // "editor.occurrencesHighlight": false,
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "none",
  "explorer.openEditors.visible": 0,
  "files.trimTrailingWhitespace": true,
  "extensions.ignoreRecommendations": false,
  "html.format.wrapLineLength": 120,
  "files.associations": {
    "*.vue": "vue"
  },
  "explorer.autoReveal": false,
  "terminal.integrated.fontFamily": "'SourceCodePro-Semibold'",
  "terminal.integrated.lineHeight": 1.1,
  "explorer.confirmDragAndDrop": false,
  "git.autofetch": true,
  "editor.multiCursorModifier": "alt",
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "stylelint.enable": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "jspm_packages": true,
    "node_modules": true,
    "**/node_modules": true
  },
  "eslint.packageManager": "yarn",
  "vetur.validation.script": false,
  "vetur.validation.style": false,
  "vetur.validation.template": false,
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.external.osxExec": "iTerm2.app",
  "editor.wordWrapColumn": 120,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "vetur.format.options.useTabs": true,
  "vetur.format.options.tabSize": 4,
  "breadcrumbs.enabled": true,
  "insertDateString.format": "YYYY-MM-DDThh:mm:ss.000Z",
  "insertDateString.formatDate": "YYYY-MM-DD",
  "insertDateString.formatTime": "hh:mm:ss",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.fontWeightBold": "800",
  "workbench.editor.showTabs": true,
  "workbench.iconTheme": "vscode-icons",
  "git.confirmSync": false,
  "keyboard.touchbar.enabled": false,
  "editor.fontLigatures": true,
  "go.formatTool": "goimports",
  "terminal.integrated.rendererType": "dom",
  "workbench.colorTheme": "Base16 Eighties Dark",
  "window.zoomLevel": 0,
  "[terraform]": {
    "editor.formatOnSave": true
  },
  "todo-tree.tree.showScanModeButton": false,
  "terraform.indexing": {
    "enabled": false,
    "liveIndexing": false,
    "delay": 500,
    "exclude": [
      ".terraform/**/*",
      "**/.terraform/**/*"
    ]
  },
  "terraform.languageServer": {
    "enabled": true,
    "args": []
  },
  "terminal.integrated.scrollback": 5000,
  "terminal.integrated.fontSize": 13
}
